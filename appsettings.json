{
  "ConnectionStrings": {
    "DefaultConnection": "DataSource=app.db;Cache=Shared"
  },
  "Logging": {
    "pathFormat": "Logs/application-{Date}.log",
    "retainedFileCountLimit": "3",
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Email": {
    "SendGridUser": "Administrator",
    "SendGridKey": "<Generate your sendgrid key and put it here...>",
    "EmailAddress": "<Verify your sendgrid sender email and add it here...>"
  },
  "IdentityServer": {
    "Clients": {
      "AspnetCoreReactSPA": {
        "Profile": "IdentityServerSPA"
      }
    }
  },
"AllowedHosts": "*"
}
